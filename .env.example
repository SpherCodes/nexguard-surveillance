# Backend Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration - Choose one:
# For SQLite (simpler for development/testing)
# DATABASE_URL=sqlite:///./data/database/nexguard.db

# For MSSQL (production)
SA_PASSWORD=YourStrong!Passw0rd
DATABASE_URL=mssql+pyodbc://sa:${SA_PASSWORD}@localhost:1433/nexguard_db?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# Application Settings
DEBUG=false
YOLO_DEVICE=cpu
MIN_CONFIDENCE=0.5

# Directory Configuration (for Docker)
STORAGE_DIR=/app/storage
DATA_DIR=/app/data
MODELS_DIR=/app/data/models

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Firebase Configuration (optional)
# FIREBASE_PROJECT_ID=your-project-id
